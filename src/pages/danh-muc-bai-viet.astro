---
import BaseLayout from '../layouts/BaseLayout.astro';
import Layout from '../components/Layout.tsx';
import { getVisibleBlogPosts } from '../utils/contentCollections';
import { getBlogCategories } from '../utils/blogCategories';
import { OptimizedImage } from '../components/ui/optimized-image.tsx';

const sortedPosts = await getVisibleBlogPosts();
const { categoryMap, categoryInfoMap, getCategorySlug } = await getBlogCategories();
---

<BaseLayout
  title="Tin Tức & Blog | Tin tức ngành vận tải, đánh giá xe"
  description="Cập nhật tin tức mới nhất về ngành vận tải, đánh giá xe tải, xe cẩu, kinh nghiệm lái xe và bảo dưỡng."
>
  <Layout client:load>
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-4xl font-bold mb-8">Tin Tức & Blog</h1>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="md:col-span-2">
          <div class="space-y-8">
            {sortedPosts.map((post) => (
              <article key={post.slug} class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition">
                <a href={`/${getCategorySlug(post.category)}/${post.slug}`} class="block">
                  {post.images && post.images[0] && (
                    <OptimizedImage
                      client:load
                      src={post.images[0]}
                      alt={post.title}
                      className="w-full h-64 object-cover"
                      useCase="thumbnail"
                    />
                  )}

                  <div class="p-6">
                    <div class="flex items-center gap-4 text-sm text-gray-500 mb-3">
                      <span class="bg-primary/10 text-primary px-3 py-1 rounded-full">
                        {categoryMap[post.category] || post.category}
                      </span>
                      <time datetime={post.publishDate}>
                        {new Date(post.publishDate).toLocaleDateString('vi-VN')}
                      </time>
                    </div>

                    <h2 class="text-2xl font-bold mb-3 hover:text-primary transition">
                      {post.title}
                    </h2>

                    <p class="text-gray-600 mb-4 line-clamp-3">
                      {post.description}
                    </p>

                    <div class="flex items-center justify-between">
                      <span class="text-primary font-medium">
                        Đọc thêm →
                      </span>
                      <span class="text-sm text-gray-500">
                        {post.readTime}
                      </span>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>
        </div>

        <aside class="space-y-6">
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-xl font-bold mb-4">Danh mục</h3>
            <ul class="space-y-2">
              {Object.entries(categoryMap).map(([categoryId, label]) => {
                const slug = categoryInfoMap[categoryId]?.slug || categoryId;
                return (
                  <li key={categoryId}>
                    <a
                      href={`/danh-muc-bai-viet/${slug}`}
                      class="block py-2 px-3 rounded hover:bg-gray-100 transition"
                    >
                      {label}
                    </a>
                  </li>
                );
              })}
            </ul>
          </div>

          <div class="bg-primary/5 rounded-lg p-6">
            <h3 class="text-xl font-bold mb-4">Liên hệ tư vấn</h3>
            <p class="text-gray-700 mb-4">
              Cần tư vấn về xe tải, xe cẩu? Liên hệ ngay với chúng tôi!
            </p>
            <a
              href="/lien-he"
              class="block text-center bg-primary text-white px-6 py-3 rounded-lg hover:bg-primary-700 transition"
            >
              Liên hệ ngay
            </a>
          </div>
        </aside>
      </div>
    </div>
  </Layout>
</BaseLayout>
