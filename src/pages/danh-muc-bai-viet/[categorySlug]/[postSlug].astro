---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Layout from '../../../components/Layout.tsx';
import { getCollection } from 'astro:content';
import { getBlogCategories } from '../../../utils/blogCategories';
import { OptimizedImage } from '../../../components/ui/optimized-image.tsx';
import TableOfContents from '../../../components/blog/TableOfContents.tsx';
import '../../../components/blog/BlogStyles.css';

export const prerender = true;

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const { getCategorySlug } = await getBlogCategories();

  return allPosts
    .filter(post => !post.data.isHidden)
    .map((post) => {
      const slug = post.data.slug || post.id.replace(/\.md$/, '');
      return {
        params: {
          categorySlug: getCategorySlug(post.data.category),
          postSlug: slug
        },
        props: { post },
      };
    });
}

const { post } = Astro.props;
const { Content } = await post.render();
const postData = post.data;
const { categoryMap, getCategorySlug } = await getBlogCategories();
const categoryLabel = categoryMap[postData.category] || postData.category;
const categorySlug = getCategorySlug(postData.category);

const allPosts = await getCollection('blog');
const currentSlug = postData.slug || post.id.replace(/\.md$/, '');
const relatedPosts = allPosts
  .filter(p => {
    const pSlug = p.data.slug || p.id.replace(/\.md$/, '');
    return !p.data.isHidden && p.data.category === postData.category && pSlug !== currentSlug;
  })
  .slice(0, 3);
---

<BaseLayout
  title={`${postData.title} | Blog soosanmotor.com`}
  description={postData.description}
>
  <Layout client:load>
    <article class="container mx-auto px-4 py-8">
      <div class="max-w-4xl mx-auto">
        <div class="mb-8">
          <div class="flex items-center gap-4 text-sm text-gray-500 mb-4">
            <a
              href={`/danh-muc-bai-viet/${categorySlug}`}
              class="bg-primary/10 text-primary px-3 py-1 rounded-full hover:bg-primary/20 transition"
            >
              {categoryLabel}
            </a>
            <time datetime={postData.publishDate}>
              {new Date(postData.publishDate).toLocaleDateString('vi-VN', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
            <span>{postData.readTime} phút đọc</span>
          </div>

          <h1 class="text-4xl font-bold mb-4">{postData.title}</h1>

          <p class="text-xl text-gray-600 mb-6">
            {postData.description}
          </p>

          <div class="flex items-center gap-4 text-sm text-gray-600">
            <span>Tác giả: {postData.author}</span>
          </div>
        </div>

        {postData.images && postData.images[0] && (
          <div class="mb-8 rounded-lg overflow-hidden">
            <OptimizedImage
              client:load
              src={postData.images[0]}
              alt={postData.title}
              className="w-full h-auto"
              useCase="gallery"
            />
          </div>
        )}

        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
          <div class="lg:col-span-3">
            <div class="prose prose-lg max-w-none blog-content">
              <Content />
            </div>
          </div>

          <aside class="lg:col-span-1">
            <div class="sticky top-8">
              <TableOfContents client:load content={post.body} />
            </div>
          </aside>
        </div>

        {relatedPosts.length > 0 && (
          <div class="mt-12 pt-8 border-t">
            <h2 class="text-2xl font-bold mb-6">Bài viết liên quan</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              {relatedPosts.map((relatedPost) => {
                const relCategorySlug = getCategorySlug(relatedPost.data.category);
                const relSlug = relatedPost.data.slug || relatedPost.id.replace(/\.md$/, '');
                return (
                  <a
                    href={`/danh-muc-bai-viet/${relCategorySlug}/${relSlug}`}
                    class="group"
                  >
                    <article class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition">
                      {relatedPost.data.images && relatedPost.data.images[0] && (
                        <OptimizedImage
                          client:load
                          src={relatedPost.data.images[0]}
                          alt={relatedPost.data.title}
                          className="w-full h-48 object-cover"
                          useCase="thumbnail"
                        />
                      )}
                      <div class="p-4">
                        <h3 class="font-bold mb-2 group-hover:text-primary transition line-clamp-2">
                          {relatedPost.data.title}
                        </h3>
                        <p class="text-sm text-gray-600 line-clamp-2">
                          {relatedPost.data.description}
                        </p>
                      </div>
                    </article>
                  </a>
                );
              })}
            </div>
          </div>
        )}
      </div>
    </article>
  </Layout>
</BaseLayout>
