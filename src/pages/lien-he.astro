---
import BaseLayout from '../layouts/BaseLayout.astro';
import Layout from '../components/Layout.tsx';
import ContactForm from '../components/ContactForm.tsx';
import AddressRegions from '../components/AddressRegions.tsx';
import { addressRegions } from '../lib/constants/addressData';
---

<BaseLayout
  title="Liên Hệ | soosanmotor.com"
  description="Liên hệ với chúng tôi để được tư vấn về xe tải, cẩu, mooc, đầu kéo. Hotline: 0764 6789 01"
>
  <Layout client:load>
    <div class="container mx-auto px-4 py-12">
      <div class="max-w-6xl mx-auto">
        <h1 class="text-4xl font-bold text-center mb-4">Liên Hệ Với Chúng Tôi</h1>
        <p class="text-center text-gray-600 mb-12">
          Hãy để lại thông tin, chúng tôi sẽ liên hệ tư vấn miễn phí cho bạn!
        </p>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
          <div>
            <h2 class="text-2xl font-bold mb-6">Gửi Yêu Cầu Tư Vấn</h2>
            <ContactForm client:load />
          </div>

          <div>
            <h2 class="text-2xl font-bold mb-6">Thông Tin Liên Hệ</h2>

            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold mb-1">Hotline</h3>
                  <a href="tel:0764678901" class="text-primary text-xl font-bold hover:underline">
                    0764 6789 01
                  </a>
                  <p class="text-sm text-gray-600 mt-1">Hỗ trợ 24/7</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold mb-1">Email</h3>
                  <a href="mailto:sales@soosanmotor.com" class="text-primary hover:underline">
                    sales@soosanmotor.com
                  </a>
                  <p class="text-sm text-gray-600 mt-1">Phản hồi trong 24h</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold mb-1">Địa Chỉ</h3>
                  <p class="text-gray-700">
                    Hệ thống chi nhánh toàn quốc
                  </p>
                  <p class="text-sm text-gray-600 mt-1">Xem chi tiết bên dưới</p>
                </div>
              </div>
            </div>

            <div class="mt-8 p-6 bg-gray-50 rounded-lg">
              <h3 class="font-bold mb-4">Giờ làm việc</h3>
              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-600">Thứ 2 - Thứ 6:</span>
                  <span class="font-medium">8:00 - 18:00</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Thứ 7:</span>
                  <span class="font-medium">8:00 - 17:00</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Chủ nhật:</span>
                  <span class="font-medium">8:00 - 12:00</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-12">
          <h2 class="text-2xl font-bold text-center mb-8">Hệ Thống Chi Nhánh Toàn Quốc</h2>
          <AddressRegions client:load regions={addressRegions} />
        </div>
      </div>
    </div>
  </Layout>
</BaseLayout>
