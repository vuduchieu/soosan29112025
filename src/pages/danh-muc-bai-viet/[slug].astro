---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Layout from '../../components/Layout.tsx';
import { getVisibleBlogPosts } from '../../utils/contentCollections';
import { getBlogCategories } from '../../utils/blogCategories';
import { OptimizedImage } from '../../components/ui/optimized-image.tsx';

export async function getStaticPaths() {
  const { categories } = await getBlogCategories();

  return categories.map(category => ({
    params: { slug: category.data.slug },
    props: { categoryId: category.data.id },
  }));
}

const { slug } = Astro.params;
const { categoryId } = Astro.props;
const { categoryMap, categoryInfoMap, getCategorySlug } = await getBlogCategories();
const allPosts = await getVisibleBlogPosts();
const filteredPosts = allPosts.filter(post => post.category === categoryId);
const categoryName = categoryMap[categoryId] || categoryId;
const categorySlug = getCategorySlug(categoryId);
---

<BaseLayout
  title={`${categoryName} | Tin tức ngành vận tải`}
  description={`Xem tất cả bài viết về ${categoryName}`}
>
  <Layout client:load>
    <div class="container mx-auto px-4 py-8">
      <div class="mb-8">
        <nav class="text-sm text-gray-600 mb-4">
          <a href="/danh-muc-bai-viet" class="hover:text-primary">Danh Mục Bài Viết</a>
          <span class="mx-2">›</span>
          <span>{categoryName}</span>
        </nav>
        <h1 class="text-4xl font-bold">{categoryName}</h1>
        <p class="text-gray-600 mt-2">
          {filteredPosts.length} bài viết
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="md:col-span-2">
          {filteredPosts.length > 0 ? (
            <div class="space-y-8">
              {filteredPosts.map((post) => (
                <article key={post.slug} class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition">
                  <a href={`/danh-muc-bai-viet/${categorySlug}/${post.slug}`} class="block">
                    {post.images && post.images[0] && (
                      <OptimizedImage
                        client:load
                        src={post.images[0]}
                        alt={post.title}
                        className="w-full h-64 object-cover"
                        useCase="thumbnail"
                      />
                    )}

                    <div class="p-6">
                      <div class="flex items-center gap-4 text-sm text-gray-500 mb-3">
                        <span class="bg-primary/10 text-primary px-3 py-1 rounded-full">
                          {categoryName}
                        </span>
                        <time datetime={post.publishDate}>
                          {new Date(post.publishDate).toLocaleDateString('vi-VN')}
                        </time>
                        <span>{post.readTime} phút đọc</span>
                      </div>

                      <h2 class="text-2xl font-bold mb-3 hover:text-primary transition">
                        {post.title}
                      </h2>

                      <p class="text-gray-600 mb-4 line-clamp-3">
                        {post.description}
                      </p>

                      <div class="flex items-center justify-between">
                        <span class="text-primary font-medium">
                          Đọc thêm →
                        </span>
                      </div>
                    </div>
                  </a>
                </article>
              ))}
            </div>
          ) : (
            <div class="bg-white rounded-lg shadow-sm p-8 text-center">
              <p class="text-gray-600">Chưa có bài viết nào trong danh mục này.</p>
              <a href="/danh-muc-bai-viet" class="inline-block mt-4 text-primary hover:underline">
                ← Quay lại danh mục bài viết
              </a>
            </div>
          )}
        </div>

        <aside class="space-y-6">
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-xl font-bold mb-4">Danh mục</h3>
            <ul class="space-y-2">
              {Object.entries(categoryMap).map(([catId, label]) => {
                const catSlug = categoryInfoMap[catId]?.slug || catId;
                return (
                  <li key={catId}>
                    <a
                      href={`/danh-muc-bai-viet/${catSlug}`}
                      class={`block py-2 px-3 rounded transition ${
                        catId === categoryId
                          ? 'bg-primary text-white'
                          : 'hover:bg-gray-100'
                      }`}
                    >
                      {label}
                    </a>
                  </li>
                );
              })}
            </ul>
          </div>

          <div class="bg-primary/5 rounded-lg p-6">
            <h3 class="text-xl font-bold mb-4">Liên hệ tư vấn</h3>
            <p class="text-gray-700 mb-4">
              Cần tư vấn về xe tải, xe cẩu? Liên hệ ngay với chúng tôi!
            </p>
            <a
              href="/lien-he"
              class="block text-center bg-primary text-white px-6 py-3 rounded-lg hover:bg-primary-700 transition"
            >
              Liên hệ ngay
            </a>
          </div>
        </aside>
      </div>
    </div>
  </Layout>
</BaseLayout>
